                        <Insets bottom="15.0" right="14.0" top="15.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="serMainCancel" mnemonicParsing="false" prefHeight="26.0" prefWidth="76.0" text="Cancel">
                     <HBox.margin>
                        <Insets bottom="15.0" right="28.0" top="15.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="15.0" top="21.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
